<h2 id="edit_title">edit post</h2>
<hr>
<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
        <ul>
            <%= @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :title %><br>
    <%= f.text_field :title %> <!-- Displaying label and input for the title -->

    <br><br>

    <%= f.label :time %><br>
    <%= f.number_field :time %>

    <br><br>

    <%= f.label :snippet %><br>
    <%= f.text_area :snippet %>

    <br><br>

    <%= f.label :content, "Content" %><br>
    <%= f.text_area :content %>

    <br><br>

    <%= f.submit %>
<% end %>
