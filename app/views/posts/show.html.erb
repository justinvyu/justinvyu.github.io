<div class="post-show-wrapper">

    <%= link_to '← Back', posts_path, class: 'back-link' %>

    <% if user_signed_in? %>
        <%= link_to 'Edit', edit_post_path(@post), :class => 'edit_link button' %>
        <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'delete_link button' %>
    <% end %>


    <div class="post">
        <div class="article-header">
            <h4 class="date"><%= @post.created_at.strftime('%b %d, %Y') %></h4>
            <h3 class="title"><%= @post.title %></h3>
        </div>

        <p><%= markdown @post.content %></p>
    </div>
</div>

<div id="social-media">
    <hr>

    <a onclick="javascript:window.open('http://www.facebook.com/sharer/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook-official fa-lg"></i></a>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @justinvyu - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter fa-lg"></i></a>
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus fa-lg"></i></a>

    <hr>

</div>


